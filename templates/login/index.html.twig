{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <div class="form-floating mb-3">
            <input type="email" class="form-control" id="floatingInput" name="_username" value="{{ last_username }}" placeholder="name@example.com">
            <label for="floatingInput">Email address</label>
        </div>
        <div class="form-floating mb-3">
            <input type="password" class="form-control" id="floatingPassword" name="_password" placeholder="Password">
            <label for="floatingPassword">Password</label>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">login</button>
        </div>
    </form>
{% endblock %}
